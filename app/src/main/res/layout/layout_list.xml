<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"

        android:layout_width="match_parent"
        android:layout_height="200dp">


        <ImageView
            android:id="@+id/image_Last_News_Main"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
<TextView
    android:ellipsize="end"
    android:lines="2"
    android:layout_marginTop="4dp"
    android:id="@+id/txt_title_Main_news"
    android:textColor="@color/withe"
    android:textStyle="bold"
    android:textSize="16sp"
    android:layout_gravity="right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginEnd="8dp"
            android:id="@+id/image_Writer_Main_News"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:src="@color/colorPrimary" />

        <TextView
            android:textSize="12sp"
            android:id="@+id/txt_writer_main_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/image_Writer_Main_News"
            android:textColor="@color/withe" />

        <TextView
            android:textSize="12sp"
            android:id="@+id/txt_date_main_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/txt_writer_main_news"
            android:textColor="@color/withe" />
    </RelativeLayout>

</LinearLayout>